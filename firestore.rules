rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }

    // Admin check: Document existence OR Specific Developer Emails
    function isAdmin() {
      return exists(/databases/(default)/documents/roles_admin/$(request.auth.uid)) ||
             (request.auth.token.email in ['ath@mtfa.org', 'atika@mtfa.org', 'nasrullah@mtfa.org']);
    }

    // --- Collection Rules ---

    // Users
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin() || isSignedIn(); // Opened up list for teachers/matching logic (filtering happens client side often)
      allow create: if isSignedIn(); // Allow anyone to register
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isExistingOwner(userId) || isAdmin();
    }

    // Registrations (Student Verification Queue)
    match /registrations/{registrationId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isAdmin();
    }

    // Courses
    match /courses/{courseId} {
      allow read: if isSignedIn();
      allow write: if isAdmin(); // Only admins create/edit courses
    }

    // Bursaries (Financial Aid)
    match /bursaries/{bursaryId} {
      allow read: if isAdmin() || (isSignedIn() && resource.data.submittedBy == request.auth.uid);
      allow create: if isSignedIn();
      allow update, delete: if isAdmin();
    }

    // Payments (Disbursements)
    match /payments/{paymentId} {
      allow read: if isAdmin() || (isSignedIn() && resource.data.recipientId == request.auth.uid);
      allow create: if isAdmin() || isSignedIn(); // Allow automated triggers (e.g., from attendance)
      allow update: if isAdmin();
    }

    // Attendance Logs
    match /attendance_logs/{logId} {
      allow read: if isAdmin() || (isSignedIn() && resource.data.teacherId == request.auth.uid);
      allow create: if isSignedIn(); // Teachers submit logs
      allow update: if isAdmin();
    }

    // Matches (AI Engine)
    match /matches/{matchId} {
      allow read, write: if isAdmin(); // Admin manages the matching engine
    }

    // Ulumi Groups
    match /ulumi_groups/{groupId} {
      allow read: if isSignedIn(); // Visible to teachers/students
      allow create, update, delete: if isAdmin() || (isSignedIn() && request.resource.data.asatizahId == request.auth.uid);
    }

    // Settings & Notifications
    match /settings/{settingId} {
      allow read, write: if isAdmin();
    }
    match /notification_templates/{templateId} {
      allow read, write: if isAdmin();
    }

    // Admin Roles (Access Control)
    match /roles_admin/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isAdmin();
    }
  }
}
